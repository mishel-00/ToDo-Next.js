generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model attachment {
  id       Int    @id @default(autoincrement())
  fileurl  String @db.VarChar(500)
  filename String @db.VarChar(255)
  taskid   Int?
  task     task?  @relation(fields: [taskid], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model comment {
  id     Int    @id @default(autoincrement())
  text   String
  taskid Int?
  task   task?  @relation(fields: [taskid], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model project {
  id          Int       @id @default(autoincrement())
  name        String    @db.VarChar(255)
  description String?
  startdate   DateTime? @db.Timestamp(6)
  enddate     DateTime? @db.Timestamp(6)
  task        task[]
}

model task {
  id          Int          @id @default(autoincrement())
  title       String       @db.VarChar(255)
  description String?
  status      String?      @db.VarChar(50)
  priority    String?      @db.VarChar(50)
  tags        String?      @db.VarChar(255)
  startdate   DateTime?    @db.Timestamp(6)
  duedate     DateTime?    @db.Timestamp(6)
  projectid   Int?
  attachment  attachment[]
  comment     comment[]
  project     project?     @relation(fields: [projectid], references: [id], onDelete: Cascade, onUpdate: NoAction)
}
